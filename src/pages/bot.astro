---
import PageHeader from "../components/PageHeader.astro";
import Section from "../components/Section.astro";
import GlobalLayout from "../layouts/GlobalLayout.astro";
---

<GlobalLayout title="Administration">
  <PageHeader>Admin</PageHeader>
  <main>
    <Section>Bot token</Section>

    <script>
      const oauthHash = location.hash.substring(1)!;
      const accessToken = oauthHash
        .substring(oauthHash.indexOf("access_token="))
        .split("&")[0]!
        .split("=")[1]!;

      document.getElementById("token")!.innerText = accessToken;
    </script>

    <p>
      Use this in the .env:
      <code id="token"></code>
    </p>

    <a href="/admin">back to admin</a>
  </main>
</GlobalLayout>

<style>
  #token {
    border: 2px solid #e2931d;
    padding: 2px;
  }
</style>
