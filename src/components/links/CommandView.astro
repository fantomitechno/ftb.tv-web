---
import type { Command } from "@prisma/client";

interface Props {
  command: Command;
  edit?: boolean;
}

const { command, edit = false } = Astro.props;
---

<div hx-target="this" hx-swap="outerHTML">
  <div>
    <label>Name</label>: {command.commandName}
    {
      command.message && (
        <>
          <label>Message</label>: {command.message}
        </>
      )
    }
    {
      edit && (
        <button hx-get={`/api/command/${command.commandName}`}>
          Click To Edit
        </button>
      )
    }
  </div>
</div>
